@model ProductModel

<form asp-action="ProductUpdate">
    <input asp-for="Id" hidden />

    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Editar Produto</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size = 20px;">Nome</label>
            </div>
            <div class="col-10 p-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size = 20px;">Descrição</label>
            </div>
            <div class="col-10 p-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size = 20px;">Categoria</label>
            </div>
            <div class="col-10 p-3">
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size = 20px;">Preço</label>
            </div>
            <div class="col-10 p-3">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size = 20px;">Imagem</label>
            </div>
            <div class="col-10 p-3">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn btn-primary form-control">Voltar para Lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Editar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
